						        <% if(currentUser){ %>
									<form method="POST" action="/hospitals/<%=hospital._id%>?_method=DELETE">
										<button class="btn btn-danger">Delete</button>
									</form>
          						<%  } %>

						</div>						
					</div>
			</div>
