<% include partials/header1 %>
    <!-- Banner Area Starts -->
    <section class="banner-area other-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Hospitals</h1>
                    <a href="/">Home</a> <span>|</span> <a href="/hospitals">Hospitals</a>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Area End -->

    <!-- Patient Area Starts -->
    <section class="patient-area ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-patient mb-4">
                        <form action="/hospitals/search" method="POST">
                            <div class="input-group-icon mt-10">
                                <div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
                                <input type="text" name="pin" placeholder="Enter pin code here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter pin code here'" required class="single-input">
                            </div>
                            <p class="pt-3"><button type="submit" class="genric-btn success circle arrow">Search</button></p>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Patient Area Starts -->


    <!-- Patient Area Starts -->
    <section class="patient-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                <%hospitals.forEach(function(hospital){ %>
                    <div class="single-patient mb-4">
                        <img src="<%=hospital.image%>" alt="">
                        <h3><%=hospital.name%></h3>
                        <h5><%=hospital.city%></h5>
                        <p class="pt-3"><a href="/hospitals/<%=hospital._id%>" class="genric-btn success circle arrow">Know More<span class="lnr lnr-arrow-right"></span></a></p>
                    </div>
                <% }); %>
                </div>
            </div>
        </div>
    </section>
    <!-- Patient Area Starts -->





