<% include partials/header1 %>
<link rel="stylesheet" type="text/css" href="/css/medicals.css">
<!--======================= First Container ================-->
<div class="container-fluid bg-1 text-center" >
  <h3 class="margin">A heritage in care.</h3>
  <img src="/images/doctor2.jpg" id="image" class="img-responsive img-circle margin" style="display:inline" alt="Bird" width="350" height="350">
  <h3>A reputation in excellence.</h3>
</div>

<!-- ========= end of first Container ============= -->


	<div class="col-sm-12">

		<%medicals.forEach(function(medical){ %>
			<div class="col-md-4 col-sm-6">
				<div class="thumbnail">
			
					<img id="image" class="img-responsive img-rounded margin" src="<%=medical.image%>">
					<div class="text-center">
						<h4 class="card-title"><%=medical.name%></h4>
						<h5 class="card-title"><%=medical.city%></h5>
						
						<a class="btn btn-success" href="/medicals/<%=medical._id%>">Details</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>		
.
<div id="portfolio" class="container-fluid text-center bg-grey">
  <h2>What our customers say</h2>
  <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <h4>"This company is the best. I am so happy with the result!"<br><span>Michael Roe, Vice President, Comment Box</span></h4>
      </div>
      <div class="item">
        <h4>"One word... WOW!!"<br><span>John Doe, Salesman, Rep Inc</span></h4>
      </div>
      <div class="item">
        <h4>"Could I... BE any more happy with this company?"<br><span>Chandler Bing, Actor, FriendsAlot</span></h4>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
