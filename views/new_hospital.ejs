<% include partials/header1 %>
<link rel="stylesheet" type="text/css" href="/css/form.css">
<!-- The Modal (contains the Sign Up form) -->
<div id="new_hospital" class=" jumbotron container">
  <form action="/hospitals" method="POST" class="form-inline">
    <div class="container form-group">
      <h1>Add new Hospital</h1>
      <p>Please fill in this form to create an new entry of hospital.</p>
      <hr>
      <label for="name"><b>NAME OF HOSPITAL</b></label><br>
      <input type="text" class="form-control" placeholder="Enter Name" name="name" required><br>

      <label for="image"><b>IMAGE</b></label><br>
      <textarea type="text" class="form-control" placeholder="Enter Image URL" name="image" required></textarea><br> 

      <label for="addresss"><b>ADDRESS</b></label><br>
      <textarea type="text" class="form-control" placeholder="Enter Address" name="address" required></textarea><br> 

      <label for="city"><b>CITY</b></label><br>
      <input type="text" class="form-control" placeholder="Enter City" name="city" required><br>

      <label for="email"><b>EMAIL</b></label><br>
      <input type="email" class="form-control" placeholder="Enter email" name="email" required><br>

      <label for="contact"><b>CONTACT NO</b></label><br>
      <input type="tel" class="form-control" placeholder="Enter Contact No" name="contact" required><br><br>


      <div>
        <button type="submit" class="btn btn-default">ADD</button><br>
      </div>
    </div>
  </form>
</div>
